<div class="container">
{{# each products }}
<div class="row equal">
{{# each this}}
  <div class="col-sm-6 col-md-4 equal">
    <div class="thumbnail">
      <img src="{{this.imagePath}}" class="img-responsive">
      <div class="caption">
        <h3>{{this.title}}</h3>
        <p class="description">{{this.description}}</p>
        <div class="clearfix">
        <div class="price pull-left">&#8377 {{this.price}}</div>  
        <a href="/add-to-cart2/{{this._id}}" class="btn btn-success pull-right" role="button">Add to cart</a>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>
{{/each}}
</div>
